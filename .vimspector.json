{
	"configurations": {
    	"debug": {
    	  	"adapter": "vscode-cpptools",
    	  	"configuration": {
    		        "type": "cppdbg",
    		        "request": "launch",
    		        "program": "${workspaceRoot}/bin/${fileBasenameNoExtension}",
    		        "args": [],
    		        "cwd": "${workspaceRoot}/bin",
    		        "environment": [],
    		        "externalConsole": false,
    		        "stopAtEntry": false,
    		        "preLaunchTask": "build",
	    	        "MIMode": "gdb",
	    	        "setupCommands": [
		            {
               		 "description": "Enable pretty-printing for gdb",
		                "text": "-enable-pretty-printing",
               		 "ignoreFailures": true
		            }
		        ]
    	  	}  		
    	  }
	}
}
