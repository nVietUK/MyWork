{
  "configurations": {
    "Vim - run a test": {
      "adapter": "vscode-cpptools",
      "configuration": {
      	"type": "cppbuild",
            "label": "Folder",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
                "-std=c++11",
                "-lpthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}/${fileBasenameNoExtension}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
			}
    }
  }
}

